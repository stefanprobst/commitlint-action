{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@stefanprobst/tsconfig-lib",
	"compilerOptions": {
		/**
		 * `commitlint` does not currently work with esm.
		 *
		 * @see https://github.com/conventional-changelog/commitlint/issues/3705
		 */
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2022",
		"verbatimModuleSyntax": false
	},
	"exclude": ["dist", "node_modules"]
}
